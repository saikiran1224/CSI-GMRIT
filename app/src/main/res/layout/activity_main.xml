<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".activities.general.MainActivity">

    <ImageView
        android:id="@+id/csiLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/csilogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:textColor="@color/colorDarkBlue"
        android:textStyle="bold"
        android:id="@+id/csiText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:textSize="19dp"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:text="CSI GMRIT Student Chapter"
        android:layout_toRightOf="@id/csiLogo" />

    <include
        layout="@layout/activity_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />








</RelativeLayout>
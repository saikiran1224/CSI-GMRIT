<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/colorWhite"
    tools:context=".activities.general.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/txtWelcomeTitle"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/semi_cirlce">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/csilogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/csiLogo" />

        <TextView
            android:id="@+id/csiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/csiLogo"
            android:text="Welcome to CSI GMRIT Student Chapter"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>




    <TextView
        android:id="@+id/txtWhatsNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's new"
        android:layout_margin="10dp"
        android:layout_below="@id/txtWelcomeTitle"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"
        android:textSize="19dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/txtWhatsNew"
        android:id="@+id/homePageNewsRecylcer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/statistics"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:weightSum="3"
        android:layout_below="@id/homePageNewsRecylcer"
        android:background="@color/colorBlue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                app:tint="@color/colorWhite"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_person_outline_24" />

            <TextView
             android:layout_width="match_parent"
             android:textColor="@color/colorWhite"
             android:gravity="center"
             android:textStyle="bold"
             android:layout_margin="5dp"
             android:textSize="18dp"
             android:layout_height="match_parent"
             android:text="150" />

            <View
                android:layout_width="40dp"
                android:background="@color/colorWhite"

                android:layout_height="1dp" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Members" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                app:tint="@color/colorWhite"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_event_note_24" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:layout_height="match_parent"
                android:text="200" />

            <View
                android:layout_width="40dp"
                android:background="@color/colorWhite"

                android:layout_height="1dp" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Events" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                app:tint="@color/colorWhite"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_people_outline_24" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:layout_height="match_parent"
                android:text="1125" />

            <View
                android:layout_width="40dp"
                android:background="@color/colorWhite"

                android:layout_height="1dp" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Participants" />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/txtAboutCSI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:layout_margin="10dp"
        android:layout_below="@id/statistics"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"
        android:textSize="19dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSI GMRIT Chapter is established in the Year 2007. Currently, CSI in our College achieved three times consecutively the Best Chapter Award in South Indian Division. Our Chapter got many achievements from Various Institutes for its Events. Every year, CSI is going to conduct TECHNOFEST, a National Level Fest\n Visit us at https://www.csi.gmrit.org"
        android:layout_below="@id/txtAboutCSI"
        android:layout_marginRight="10dp"
        android:gravity="start"
        android:justificationMode="inter_word"
        android:layout_marginLeft="10dp"
        android:id="@+id/aboutUsDescription" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/aboutUsDescription"
        android:layout_marginTop="10dp"
        android:id="@+id/essentialRecycler" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <include
        layout="@layout/activity_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>